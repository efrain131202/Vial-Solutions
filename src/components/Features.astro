---
const funciones = [
  {
    imagen: "/DiagnosticoRapido.svg",
    texto: "Diagnóstico Rápido"
  },
  {
    imagen: "/MantenimientoPreventivo.svg",
    texto: "Mantenimiento Preventivo"
  },
  {
    imagen: "/AsitenciaEnRuta.svg",
    texto: "Asistencia en Ruta"
  }
];
---

<section class="py-12 px-4 max-w-6xl mx-auto">
  <h2 class="text-6xl font-bold text-center mb-28">Funciones</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {funciones.map((funcion) => (
      <div class="flex flex-col items-center text-center">
        <img 
          src={funcion.imagen} 
          alt={funcion.texto}
          class="w-40 h-40 object-contain mb-4"
        />
        <p class="text-xl md:text-2xl font-medium">{funcion.texto}</p>
      </div>
    ))}
  </div>
</section>